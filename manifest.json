{
  "manifest_version": 2,
  "name": "Gitlab Contribution Counter",
  "version": "1.0.0.0",
  "description": "Count GitLab contributions like GitHub",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs"
  ],
  "icons" : {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*"
      ],
      "js": [
        "app.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
